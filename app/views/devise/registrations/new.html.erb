<div class="center">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <%# <div class="field"> %>
        <%#   <%= f.label :name %1><br /> %>
        <%#   <%= f.text_field :name, autofocus: true %1> %>
        <%# </div> %>

        <div class="field">
          <%# <%= f.label :email %1><br /> %>
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %><br />
        </div>

        <div class="field">
          <%# <%= f.label :password %1> %>
          <% if @validatable %>
          <%# <em>(<%= @minimum_password_length %1> characters minimum)</em> %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password (8 characters minimum" %><br />
        </div>

        <div class="field">
          <%# <%= f.label :password_confirmation %1><br /> %>
          <br /><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%# <%= render "devise/shared/links" %1> %>
    </div>
  </div>
</div>
